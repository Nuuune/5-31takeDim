.container {
  /* display: flex; */
  background-color: #f5f5f7;
  box-sizing: border-box;

  width: 100%;
   overflow-x: hidden;
}

view, scroll-view, navigator {
  box-sizing: border-box;
  line-height: 1.418;
}

text {
  text-align: justify;
  line-height: 1.418;
}

button::after {
  display: none !important;
}

/* flex布局 */
.flex{
  display: flex;
  flex-direction: column;
  align-items: center;
  box-sizing: border-box;
}
.flex-row{
  flex-direction: row;
}
.flex-center{
  justify-content: center;
}
.flex-around {
  justify-content: space-around;
}
.flex-item-1{
  flex: 1;
}
.flex-beRow {
  width: 100%;
  margin-bottom: 20px;
}
.flex-beRow:last-child {
  margin-bottom: 0;
}
