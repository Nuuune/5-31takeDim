.container {
  /* display: flex; */
  background-color: #f5f5f7;
  box-sizing: border-box;

  width: 100%;
   overflow-x: hidden;
}

view, scroll-view, navigator {
  box-sizing: border-box;
  line-height: 1.418;
}

text {
  text-align: justify;
  line-height: 1.418;
}

button::after {
  display: none !important;
}

/* flex布局 */
.flex{
  display: flex;
  flex-direction: column;
  align-items: center;
  box-sizing: border-box;
}
.flex-row{
  flex-direction: row;
}
.flex-between {
  justify-content: space-between;
}
.flex-center{
  justify-content: center;
}
.flex-around {
  justify-content: space-around;
}
.align-start {
  align-items: flex-start;
}
.align-stretch {
  align-items: stretch;
}
.align-end {
  align-items: flex-end;
}
.flex-item-1{
  flex: 1;
}
.flex-beRow {
  width: 100%;
  margin-bottom: 20px;
}
.flex-beRow:last-child {
  margin-bottom: 0;
}
.clear-padding {
  padding: 0 !important;
}
/* 颜色方面 */
.bg-gray {
  background-color: #f4f6f8;
}
.bg-white {
  background-color: #fff;
}
.bg-org {
  background-color: #ff7f61;
}
.font-org {
  color: #ff7f61;
}
.font-black {
  color: #000;
}
.font-weight-600 {
  font-weight: 600;
}
.font-deepgray {
  color: #949494;
}
.font-white {
  color: #fff;
}
.font-primary {
  color: #1ca899;
}
/* 文本处理 */
.text-delete {
  text-decoration: line-through;
}
/* 按钮组相关 */
.btns-wrap {
  border-top:1rpx solid #f4f6f8;
  height: 90rpx;
  position: fixed;
  bottom: 0;
  width: 100%;
  padding:10rpx 0;
}
.btns-wrap .btn {
  height:70rpx;
  line-height:70rpx;
  text-align: center;
  font-size: 28rpx;
  margin:0 10rpx;
  border-radius: 18rpx;
}
