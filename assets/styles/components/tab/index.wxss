.tab {
  height: 88rpx;
  line-height: 1;
  overflow: hidden;
  border-bottom: 1rpx solid #d3d3d3;
  /* box-shadow: 0 2rpx 6rpx rgba(0, 0, 74, 0.1); */
}

.tab__bd {
  width: 750rpx;
  padding-left: 36rpx;
  display: flex;
  flex-direction: row;
  height: 87rpx;
  background: #fff;
}

.tab__bd--fixed {
  position: fixed;
  top: 0;
  z-index: 2;
}

.tab__item {
  flex: 1;
  display: inline-block;
  text-align: center;
  box-sizing: border-box;
  height: 87rpx;
  overflow: hidden;
}

.tab__title {
  font-size: 30rpx;
  display: block;
  color: rgba(0, 0, 0, 0.4);
  font-weight: bold;
  height: 87rpx;
  line-height: 87rpx;
  box-sizing: border-box;
  margin: 0 64rpx 0 0;
  word-break: keep-all;
  position: relative;
}

.tab__item--selected .tab__title {
  color: #0FBB58;
}

.tab__item--selected .tab__title::after {
  content: "";
  width: 100%;
  height: 6rpx !important;
  background: #0FBB58;
  border-radius: 6rpx;
  position: absolute;
  bottom: 2rpx;
  left: 0%;
}

.tab__bd--scroll {
  display: block;
  white-space: nowrap;
  height: 87rpx !important;
  line-height: 87rpx !important;
}

.tab__bd--scroll .tab__item {
  /*min-width: 80px;*/
}

.tab__bd--scroll .tab__text {
  margin: 0 20px;
}
