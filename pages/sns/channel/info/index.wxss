@import "../../common/feedList.wxss";

.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  background:#f5f5f7;
}

.container scroll-view {
  height: calc(100% - 120rpx);
}

.container .nav-bottom {
  height: 120rpx;
  border-top: 1rpx solid #dfdfdf;
  padding: 0 32rpx;
  background: #fff;

  display: flex;
  align-items: center;
  justify-content: center;
}

.container .nav-bottom .button {
  width: 100%;
  background-color: #0FBB58;
  color: #fff;
  border: 1rpx solid #ea4c89;
}

.container .cover-wrapper {
  width: 750rpx;
  height: 562rpx;
  position: relative;
  overflow: hidden;
}

.container .cover-wrapper image.bg {
  width: 750rpx;
  height: 562rpx;
  filter: blur(100rpx);
}

.container .cover-wrapper image.front {
  width: 180rpx;
  height: 180rpx;
  border-radius: 50%;
  
  position: absolute;
  top: 50%;
  left: 50%;
  margin-top: -150rpx;
  margin-left: -90rpx;
}

.container .cover-wrapper .mask {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.6);
}

.container .cover-wrapper .title {
  position: absolute;
  left: 32rpx;
  right: 32rpx;
  bottom: 80rpx;
  color: #fff;
  font-size: 44rpx;
  font-weight: 600;
}

.container .cover-wrapper .button {
  position: absolute;
  right: 32rpx;
  bottom: 50rpx;
}

.container .cover-wrapper .summary {
  position: absolute;
  left: 32rpx;
  right: 32rpx;
  bottom: 32rpx;
  font-size: 24rpx;
  font-weight: 500;
  color: #fff;
}

.intro {
  padding: 32rpx;
  font-size: 14px;
  line-height: 1.86;
  color: rgba(0, 0, 0, 0.8);
  background: #fff;
}

