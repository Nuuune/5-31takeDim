.container .channel-list {
	width: 100%;
	padding: 0 32rpx;
}

.container .channel {
	display: flex;
	flex-direction: row;
	padding: 32rpx 0;
	overflow:hidden;
	border-bottom: 1rpx solid rgba(216, 216, 216, 0.4);

  position: relative;
}

.container .channel image {
	width: 160rpx;
	height: 160rpx;
	border-radius: 8rpx;
	display: block;
}

.container .channel .content {
	/*width: 494rpx;*/
	width: 380rpx;
	padding-top: 10rpx;
	padding-left: 32rpx;
	position: relative;
  display: block;
}


.container .channel .content text {
	display: block;
}

.container .channel .content text.name{
  font-size: 32rpx;
  font-weight: 500;
  color: #000000;
}

.container .channel .content text.desc{
  margin-top: 16rpx;
  font-size: 24rpx;
  color: #000000;
}

.container .channel .content text.num-of-feeds{
  font-size: 24rpx;
  color: #0FBB58;
  position: absolute;
  bottom: 14rpx;
  left: 32rpx;
}

.container .channel .content text.num-of-feeds text{
  display: inline-block;
  margin-right: 16rpx;
}

.container .channel .button {
  position: absolute;
  top: 50%;
  right: 0;
  margin-top: -30rpx;
}