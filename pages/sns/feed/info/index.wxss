.container {
  height: 100%;
  background: #fff;

  display: flex;
  flex-direction: column;
  align-items: center;
}

.container scroll-view {
  height: calc(100% - 100rpx);
}

/**
 * 底部导航
 */
.container .nav-bottom {
  border-top: 1rpx solid rgba(0,0,0,0.1);
  box-sizing: border-box;
  width: 750rpx;
  height: 100rpx;
  padding: 0 32rpx;
  
  display: flex;
  align-items: center;
}

.container .nav-bottom input {
  height: 64rpx;
  line-height: 62rpx;
  width: 470rpx;
  border-radius: 6rpx;
  border: solid 1px rgba(0, 0, 0, 0.2);
  font-size: 28rpx;
  padding: 0 24rpx;
}

.container .nav-bottom input.full {
  width: 686rpx;
}

.container .nav-bottom .placeholder {
  font-size: 28rpx;
  color: rgba(0, 0, 0, 0.2);
}

.container .nav-bottom .ico-btn {
  background: transparent;
  border: none !important;

  position:relative;
  display:block;
  margin: 0 0 0 0;
  padding:0 0 0 46rpx;
  box-sizing:border-box;
  font-size:36rpx;
  text-align:center;
  text-decoration:none;
  line-height: 92rpx;
  border-radius:none;
  color:#000000;
  background-color:#fff;
}

.container .nav-bottom .ico-btn .fa.fa-heart {
  color: #0FBB58;
}

.container .nav-bottom .submit {
  border: 1rpx solid #ea4c89;
  background: #0FBB58;
  color: #fff;
}
/**
 * END: 底部导航
 */

.feed {
  padding: 0 32rpx;
}

/**
 * 动态作者
 */
.feed .author {
  display: flex;
  margin: 0 0rpx 28rpx 0rpx;
}

.feed .author .avatar {
  display: block;
  width: 70rpx;
  height: 70rpx;
  border-radius: 50%;
}

.feed .author .info {
  flex: 1;
  padding: 0 0 0 16rpx;
  line-height: 1;
}

.feed .author .info .name {
  font-size: 28rpx;
  font-weight: 500;
  line-height: 1;
  color: #000000;
  display: block;
}

.feed .author .info .date-created {
  display: block;
  margin-top: 10rpx;

  font-size: 24rpx;
  line-height: 1;
  color: #999999;
}

.feed .author .follow {
  display: block;
}
/**
 * END: 动态作者
 */

/**
 * 动态详情
 */
.feed .title {
  font-size: 36rpx;
  font-weight: 500;
  color: rgba(0, 0, 0, 0.8);
}

.feed .content {
  margin-top: 16rpx;
  font-size: 28rpx;
  color: rgba(0, 0, 0, 0.6);
}

.feed .content .topic {
  color: #0FBB58;
  display: inline;
}

.feed .images {
  margin-top: 32rpx;
}

.feed .images image {
  width: 216rpx;
  height: 216rpx;
  border-radius: 8rpx;
  margin: 0 16rpx 6rpx 0;
  overflow: hidden;
  line-height: 1;
}

.feed .images image:nth-child(3n + 3) {
  margin-right: 0rpx;
}

.feed .location {
  margin: 32rpx 0 32rpx 0;

  font-size: 24rpx;
  line-height: 1;
  color: #999999;
}

.feed .location .ico-location {
  display: inline-block;
  margin-right: 16rpx;
}

.feed .digg-users {
  border-top: 1rpx solid #dfdfdf;
  border-bottom: 1rpx solid #dfdfdf;
  padding: 24rpx 0 24rpx 0;
  line-height: 1;
  
  font-size: 28rpx;
  color: rgba(0, 0, 0, 0.4);

  display: flex;
  flex-direction: row;
  align-items: center;
}

.feed .digg-users view {
  line-height: 1;
}

.feed .digg-users .digg-count,
.feed .digg-users .avatars {
  margin-left: 16rpx;
}

.feed .digg-users .avatars {
  flex: 1;
  margin-left: 16rpx;

  display:flex;
  justify-content:space-between;
  margin-right:16rpx;
}

.feed .digg-users .avatars image {
  display: inline-block;
  width: 56rpx;
  height: 56rpx;
  margin-right: 8rpx;
  border-radius: 50%;
  overflow: hidden;
}

.feed .digg-users .digg-summary {
  position: absolute;
  right: 40rpx;
  top: 32rpx;
}

.comments {
  padding-top: 32rpx;
}

.comments .title {
  font-size: 12px;
  color: rgba(0, 0, 0, 0.3);
  margin-left: 32rpx;
}

.comments .comment {
  padding: 32rpx;
  border-bottom: 1px solid #dfdfdf;
}

.comments .comment .author {
  display: flex;
  margin: 0 0rpx 28rpx 0rpx;
}

.comments .comment .author .info {
  flex: 1;
  padding: 0 0 0 16rpx;
  line-height: 1;
}

.comments .comment .author .info .name {
  font-size: 28rpx;
  font-weight: 500;
  line-height: 1;
  color: #000000;
  display: block;
}

.comments .comment .avatar {
  display: block;
  width: 70rpx;
  height: 70rpx;
  border-radius: 50%;
}

.comments .comment .date-created {
  margin-top: 10rpx;
  font-size: 20rpx;
  font-weight: 300;
  color: #999999;
}

.comments .comment .content {
  padding: 0 32rpx 0 86rpx;
  font-size: 14px;
  color: rgba(0, 0, 0, 0.6);
}

.comments .comment .tocomment {
  border-radius: 8rpx;
  background-color: rgba(0, 0, 0, 0.06);
  padding: 16rpx 32rpx;
  margin-left: 86rpx;
  margin-right: 32rpx;
  margin-top: 24rpx;
  font-size: 24rpx;
  color: rgba(0, 0, 0, 0.6);
  position: relative;

  display: flex;
  align-items: flex-start;
}

.comments .comment .tocomment .xs.avatar {
  width: 24rpx;
  height: 24rpx;
  border: 50%;
  margin-right: 8rpx;
  display: inline-block;
}

.comments .comment .tocomment .user {
  font-size: 24rpx;
  color: #000;
  display: flex;
  justify-content: center;
  align-items: center;
}

.comments .comment .tocomment .content {
  flex: 1;
  font-size: 24rpx;
  color: rgba(0, 0, 0, 0.6);
  text-align: left;
  padding:0 0 0 16rpx;
}

.comments .comment .tocomment::after {
  position: absolute;
  left: -64rpx;
  top: -12rpx;
  content: "“";
  color: #0FBB58;
  font-size: 48rpx;
}
  

.dialog.container {
  background: #000;
  padding: 96rpx 0 96rpx 0; 
  display: flex;
  align-items: center;
  justify-content: center;

  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
}

.dialog.container .topbar {
  position: absolute;
  top: 0;
  left: 0;
  height: 96rpx;
  width: 750rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  color: #fff;
  font-size: 32rpx;
}

.dialog.container .topbar .ico-close {
  width: 64rpx;
  height: 64rpx;
  line-height: 64rpx;
  text-align: center;
  position: absolute;
  right: 16rpx;
  top: 16rpx;
}

.feed-image-swiper,
.feed-image-swiper swiper-item,
.feed-image-swiper swiper-item image {
  width: 750rpx;
  height: 750rpx;
}