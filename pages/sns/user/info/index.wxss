@import "../../common/feedList.wxss";

.container {
}

.user-info {
  width: 750rpx;
  height: 600rpx;
  background: rgba(0,0,0,0.8); 
  position: relative;
  overflow: hidden;
}

.user-info .bg {
  position: absolute;
  top: 0;
  left: 0;
  width: 750rpx;
  height: 600rpx;
  filter: blur(100rpx);
  z-index: 0;
}

.user-info .avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  position: absolute;
  top: 200rpx;
  left: 315rpx;
}

.user-info .name {
  color: #fff;
  font-size: 32rpx;
  width: 750rpx;
  text-align: center;
  position: absolute;
  top: 335rpx;
  left: 0;
}
.user-info .title {
  color: #0FBB58;
  font-size: 20rpx;
  width: 750rpx;
  text-align: center;
  position: absolute;
  top: 390rpx;
  left: 0;
}

.user-info .desc {
  color: rgba(255,255,255,0.7);
  font-size: 24rpx;
  width: 750rpx;
  text-align: center;
  position: absolute;
  top: 425rpx;
  left: 0;
}

.user-info .summary {
  position: absolute;
  bottom: 0;
  height: 100rpx;
  width: 750rpx;
  display: flex;
  font-size: 24rpx;
  color: #fff;
  justify-content: center;
  align-items: center;
}
.user-info .summary view {
  flex: 1;
}

.user-info .summary view text {
  display: block;
  text-align: center;
}

.tab {
  height: 80rpx;
  display: flex;
  border-bottom: 1px solid rgba(0,0,0,0.1);
  align-items: center;
  justify-content: center;
  background: #fff;
}

.tab view {
  font-size: 28rpx;
  flex: 1;
  text-align: center;
  border-right: 1px solid rgba(0,0,0,0.1);
}

.tab view:last-child {
  border-right: none;
}

.tab view.active {
  color: #0FBB58;
}

.has-more, .no-more {
  height: 96rpx;
  background: #fff;

  font-size: 28rpx;
  font-weight: 500;

  display: flex;
  justify-content: center;
  align-items: center;
}