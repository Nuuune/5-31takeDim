
.heading {
  font-size: 24rpx;
  font-weight: 700;
  color: #535353;
  margin-top: 32rpx;
  padding: 0 32rpx;
  background: #fff;
}

.heading .num {
  color: #ee2b2a;
}

.user-list {
  padding: 0 32rpx;
  background: #fff;
}

.user {
  display: flex;
  align-items: center;
  padding: 32rpx 0;
  border-bottom: 1rpx solid rgba(216, 216, 216, 0.4);
}

.user image {
  width: 70rpx;
  height: 70rpx;
  border-radius: 35rpx;
}

.user .info {
  margin-left: 16rpx;
}

.user .info .nickname {
  font-size: 28rpx;
  font-weight: 500;
  display: block;
  line-height: 1;
}

.user .info .summary {
  font-size: 24rpx;
  font-weight: 300;
  color: #999;
  display: block;
  line-height: 1;
  margin-top: 8rpx;
}