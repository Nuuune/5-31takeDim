@import "components/block.wxss";
@import "components/banners.wxss";
@import "../common/feedList.wxss";

.container {
  background-color: #fff;
  flex-direction: column;
  background: #f5f5f7;
} 

.container.fix-head {
  padding-top: 169rpx;
}

.container.fix-head .main-nav {
  position: fixed;
}

.container .main-nav {
  /* position: fixed; */
  top: 0;
  left: 0;
  z-index: 999;
  width: 750rpx;
  height: 168rpx; /*166rpx + 6rpx*/
  overflow: hidden;
  background: #fff;
}

.container .main-nav .search-bar {
  padding: 20rpx 36rpx 0 36rpx;
  position: relative;
  display: flex;
  align-items: center;
}

.search-bar navigator.input {
  display: block;
  width: 612rpx;
  height: 60rpx;
  border-radius: 6rpx;
  border: solid 0.5rpx rgba(0, 0, 0, 0.2);

  font-size: 30rpx;
  color: rgba(0, 0, 0, 0.4);
  line-height: 58rpx;
  padding: 0 12rpx;

  background: #fff;
}

.search-bar navigator.input {
  display: block;
  width: 612rpx;
  height: 60rpx;
  border-radius: 6rpx;
  border: solid 0.5rpx rgba(0, 0, 0, 0.2);

  font-size: 30rpx;
  color: rgba(0, 0, 0, 0.4);
  line-height: 58rpx;
  padding: 0 12rpx;

  background: #fff;
}

.search-bar navigator .ico-search {
  display: inline-block;
  margin-right: 16rpx;
}

.search-bar .post-feed {
  display: block;
  width: 66rpx;
  height: 60rpx;
  line-height: 60rpx;
  color: #0FBB58;
  text-align: right;
}

.search-bar .post-feed .ico-camera {
  font-size: 36rpx;
}

.nav-group {
  display: flex;
  flex-direction: row;
  background: #fff;
  padding: 0 36rpx 36rpx 36rpx;
}

.nav-group .icon-nav {
  flex: 1;
  text-align: center;
}

.nav-group .icon-nav image {
  width: 56rpx;
  height: 56rpx;
  margin: 0 auto;
  display: inline-block;
}

.nav-group .icon-nav .ico {
  display: block;
  text-align:center;
  font-size: 64rpx;
  color: #333333;
} 

.nav-group .icon-nav .title {
  font-size: 28rpx;
  text-align: center;
  color: #333333;
  display: block;
} 


.dialog.container {
  background: #000;
  padding: 96rpx 0 96rpx 0; 
  display: flex;
  align-items: center;
  justify-content: center;

  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
}

.dialog.container .topbar {
  position: absolute;
  top: 0;
  left: 0;
  height: 96rpx;
  width: 750rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  color: #fff;
  font-size: 32rpx;
}

.dialog.container .topbar .ico-close {
  width: 64rpx;
  height: 64rpx;
  line-height: 64rpx;
  text-align: center;
  position: absolute;
  right: 16rpx;
  top: 16rpx;
}

.dialog.container .bottombar {
  position: absolute;
  bottom: 0;
  left: 0;
  height: 96rpx;
  width: 750rpx;
  color: #fff;
}

.dialog.container .bottombar view {
  position: absolute;
  top: 32rpx;
  font-size: 28rpx;
  line-height: 28rpx;
}

.dialog.container .bottombar view.share {
  left: 32rpx;
}

.dialog.container .bottombar view.heart {
  right: 180rpx;
}

.dialog.container .bottombar view.comment {
  right: 32rpx;
}

.feed-image-swiper,
.feed-image-swiper swiper-item,
.feed-image-swiper swiper-item image {
  width: 750rpx;
  height: 750rpx;
}

.has-more, .no-more {
  height: 96rpx;
  background: #fff;

  font-size: 28rpx;
  font-weight: 500;

  display: flex;
  justify-content: center;
  align-items: center;
}
