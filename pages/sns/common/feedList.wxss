
.feeds {
  margin-top: 24rpx;
}

.feed {
  margin-bottom: 24rpx;
  background: #fff;
  padding: 32rpx 36rpx;
}

.feed .user {
  display: flex;
  align-items: center;
}

.feed .user image {
  width: 70rpx;
  height: 70rpx;
  border-radius: 50%;
}

.feed .user .info {
  flex: 1;
  line-height: 1;
  padding: 0rpx 24rpx;
}

.feed .user .info text {
  display: block;
  width: 400rpx;
  line-height: 1;
}

.feed .user .info text.nickname {
  font-size: 28rpx;
  font-weight: 300;
  color: #000000;
}

.feed .user .info text.date-created {
  font-size: 24rpx;
  font-weight: 300;
  color: #999999;
  margin-top: 8rpx;
}

.feed .content {
  padding: 40rpx 0 28rpx 0;
}

.feed .content .title {
  font-size: 36rpx;
  font-weight: bold;
  line-height: 1.39;
  color: rgba(0, 0, 0, 0.8);
}

.feed .content .body {
  margin-top: 12rpx;
  opacity: 0.6;
  font-size: 28rpx;
  line-height: 1.43;
  color: rgba(0, 0, 0, 0.6);

  overflow : hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 4;
  -webkit-box-orient: vertical;
}

.feed .content .body .topic {
  color: #0FBB58;
  display: inline;
}

.feed .images, .feed .single-image {
  margin-top: 32rpx;
  width: 678rpx;
}

.feed .single-image image {
  width: 540rpx;
  height: 540rpx !important;
  border-radius: 8rpx;
}

.feed .images .image {
  width: 218rpx;
  height: 218rpx;
  border-radius: 8rpx;
  overflow: hidden;
  display: inline-block;
  margin-bottom: 12rpx;
  line-height: 1;
}

.feed .images .image:nth-child(3n + 2) {
  margin-left:12rpx;
  margin-right:12rpx;
}

.feed .images .image image {
  width: 218rpx;
  height: 218rpx;
}

.feed .btn-group {
  border-top: 1px solid #dfdfdf;
  padding: 28rpx 0 0 0;
  font-size: 28rpx;
  color: rgba(0, 0, 0, 0.6);
}

.feed .btn-group .btn {
  display: inline-block;
  margin-right: 44rpx;
  line-height: 1;
}

.feed .btn-group .btn .fa {
  display: inline-block;
  margin-right: 12rpx;
  font-size: 32rpx;
}

.feed .btn-group .btn .fa.fa-heart {
  color: #0FBB58;
}

.feed .location {
  margin: 16rpx 0 0rpx 0;

  font-size: 24rpx;
  line-height: 1;
  color: #999999;
}

.feed .location .ico-location {
  display: inline-block;
  margin-right: 16rpx;
}
