page {
  height: 100%;
}
.video-wrap {
  width: 100%;
  height: 350rpx;
  background: #6dc2d5;
}
.tab-wrap {
  height: 87rpx;
  border-bottom: 1rpx solid #f4f6f8;
}
.tab-wrap > view {
  height:87rpx;
  line-height:87rpx;
  width: 250rpx;
  color: #9c9c9c;
}
.tab-wrap > view > text {
  color: inherit;
  text-align: center;
  font-size:26rpx;
  font-weight:600;
}
.tab-wrap .active {
  color: #1ca899;
  border-bottom: 4rpx solid #1ca899;
}
.content {
  height:calc(100% - 438rpx);
}
.content > view {
  padding:26rpx 40rpx;
}
.content > view + view {
  margin-top: 14rpx;
}
.intro-1-warp, .prefer-wrap {
  background-color: #fff;
}
.intro-1-warp > view > text:first-child {
  font-size:26rpx;
  font-weight:600;
  margin-bottom:9rpx;
}
.intro-1-warp > view > text + text {
  font-size:22rpx;
  color: #949494;
}
.prefer-wrap text {
  font-size: 24rpx;
  color: #949494;
}
.prefer-wrap text + text {
  margin-left: 10rpx;
}
.prefer-wrap .tag {
  padding: 12rpx;
  color: #fff;
  border-radius: 8rpx;
  font-weight: lighter;
}
