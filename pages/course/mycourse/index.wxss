page {
  font-size: 34rpx;
  height: 100%;
  background: #f5f5f4;
}
page > view {
  background: #fff;
}
.tab-wrap {
  padding: 18rpx;
  border-top: 4rpx solid #edecec;
  border-bottom: 4rpx solid #edecec;
}
.tab-hl {
  position: relative;
  color: #6ac79c;
}
.tab-hl::after {
  content: "";
  display: block;
  position: absolute;
  bottom: -18rpx;
  width: 100%;
  height: 4rpx;
  background: #6ac79c;
}
.list-wrap {
  padding: 0 36rpx;
}
.article {
  display: flex;
  padding: 48rpx 0;
  border-bottom: 1px solid rgba(0, 0, 0, 0.1);
}

.article .image {
  width: 312rpx;
  height: 200rpx;
  position: relative;
}

.article image {
  width: 312rpx;
  height: 200rpx;
  border-radius: 8rpx;
  display: block;
}


.article .image .tag {
  border-radius: 4rpx;
  background-color: #8570fb;
  font-size: 20rpx;
  color:rgba(255,255,255,0.85);
  padding: 4rpx 8rpx;

  position: absolute;
  bottom: 16rpx;
  left: 16rpx;
}

.article .content {
  width: 366rpx;
  padding-left: 32rpx;
  position: relative;
}

.article .content .title {
  display: block;
  font-size: 30rpx;
  font-weight: bold;
  color: #333333;
  overflow: hidden;
}

.article .content .subtitle {
  display: block;
  font-size: 24rpx;
  color: rgba(0, 0, 0, 0.4);
  margin-top: 16rpx;
}


.article .content .class {
  font-size: 24rpx;
  color: #8570fb;
  position: absolute;
  bottom: 0;
  left: 32rpx;
}

.article .content .follow {
  font-size: 24rpx;
  color: #8570fb;
  position: absolute;
  bottom: 0;
  right: 0;
}

.loading {
  height: 64rpx;
}
.loading text {
  font-size: 30rpx;
}

.v-sline {
  width: 4rpx;
  height: 1.4em;
  background: #edecec;
  margin: 0 3em;
}
