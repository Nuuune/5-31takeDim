.block.articles {
  padding: 36rpx 36rpx 0rpx 36rpx;
}

.block.articles .main {
  border-radius: 8rpx;
  overflow: hidden;
  position: relative;
  width: 678rpx;
  height: 460rpx;
  display: block;
}

.block.articles .main image {
  width: 678rpx;
  height: 460rpx;
}

.block.articles .main .mask {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  top: 298rpx;
  padding: 12rpx 24rpx;
  border-radius: 0 0 8rpx 8rpx;
  background: linear-gradient(to bottom, rgba(0, 0, 0, 0), #000000);
}

.block.articles .main .mask .tag {
  background: #0FBB58;
  display: inline-block;
  font-size: 20rpx;
  font-weight: bold;
  border-radius: 4rpx;
  padding: 4rpx 10rpx;
  color: rgba(255,255,255,0.85);
}

.block.articles .main .mask .title {
  color: #fff;
  display: block;
  font-size: 32rpx;
  font-weight: 500;
  margin-top: 12rpx;
}

.block.articles .main .mask .subtitle {
  color: #fff;
  display: block;
  font-size: 20rpx;
  font-weight: 300;
  margin-top: 8rpx;
}

.block.articles .hr {
  height: 1rpx;
  background: rgba(0, 0, 0, 0.1);
  margin: 48rpx 0 0 0;
}

.block.articles .article {
  display: flex;
  padding: 48rpx 0;
  border-bottom: 1px solid rgba(0, 0, 0, 0.1);
}

.block.articles .article image {
  width: 312rpx;
  height: 200rpx;
  border-radius: 8rpx;
  display: block;
}

.block.articles .article .content {
  width: 366rpx;
  padding-left: 32rpx;
}

.block.articles .article .content .tag {
  border-radius: 4rpx;
  background-color: #0FBB58;
  font-size: 20rpx;
  color:rgba(255,255,255,0.85);
  padding: 4rpx 8rpx;
}

.block.articles .article .content .title {
  display: block;
  font-size: 30rpx;
  font-weight: bold;
  color: #333333;
  height: 84rpx;
  overflow: hidden;
  margin-top: 12rpx;
}

.block.articles .article .content .subtitle {
  display: block;
  font-size: 12px;
  color: rgba(0, 0, 0, 0.4);
  margin-top: 16rpx;

}