.block.featured {
  padding: 36rpx 36rpx 0rpx 36rpx;
  background: #fff;
  margin-top: 24rpx;
}

.block.featured .head .title {
  display: block;
  color: rgba(0, 0, 0, 0.9);
  font-size: 48rpx;
  font-weight: bold;
  line-height: 1;
}

.block.featured .head .sub-title {
  display: block;
  color: rgba(0, 0, 0, 0.6);
  font-size: 24rpx;
  margin-top: 16rpx;
  line-height: 1;
}

.block.featured .article {
  display: flex;
  padding: 48rpx 0;
  border-bottom: 1px solid rgba(0, 0, 0, 0.1);
}

.block.featured .article .image {
  width: 312rpx;
  height: 200rpx;
  position: relative;
}

.block.featured .article image {
  width: 312rpx;
  height: 200rpx;
  border-radius: 8rpx;
  display: block;
}


.block.featured .article .image .tag {
  border-radius: 4rpx;
  background-color: #0FBB58;
  font-size: 20rpx;
  color:rgba(255,255,255,0.85);
  padding: 4rpx 8rpx;

  position: absolute;
  bottom: 16rpx;
  left: 16rpx;
}

.block.featured .article .content {
  width: 366rpx;
  padding-left: 32rpx;
  position: relative;
}

.block.featured .article .content .title {
  display: block;
  font-size: 30rpx;
  font-weight: bold;
  color: #333333;
  overflow: hidden;
}

.block.featured .article .content .subtitle {
  display: block;
  font-size: 24rpx;
  color: rgba(0, 0, 0, 0.4);
  margin-top: 16rpx;
}


.block.featured .article .content .class {
  font-size: 24rpx;
  color: #0FBB58;
  position: absolute;
  bottom: 0;
  left: 32rpx;
}

.block.featured .article .content .follow {
  font-size: 24rpx;
  color: #0FBB58;
  position: absolute;
  bottom: 0;
  right: 0;
}

.font-link {
  color: #0FBB58;
  font-size:38rpx;
}
