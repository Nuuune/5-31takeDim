.block.topics {
  background: #fff;
  margin-top: 24rpx;
  padding:36rpx 0 36rpx 36rpx;
}

.block.topics .head .title {
  display: block;
  color: rgba(0, 0, 0, 0.9);
  font-size: 48rpx;
  font-weight: bold;
  line-height: 1;
}

.block.topics .head .sub-title {
  display: block;
  color: rgba(0, 0, 0, 0.6);
  font-size: 24rpx;
  margin-top: 16rpx;
  line-height: 1;
}

.block.topics scroll-view {
  display: flex;
  white-space: nowrap;
  margin-top: 40rpx;
}

.block.topics scroll-view .topic {
  width: 320rpx;
  height: 218rpx;
  margin-right: 24rpx;
  display: inline-block;
  position: relative;
}

.block.topics scroll-view .mask {
  width: 320rpx;
  height: 218rpx;
  border-radius: 8rpx;
  background: rgba(0, 0, 0, 0.4);

  position: absolute;
  top: 0;
  left: 0;
}

.block.topics scroll-view view image {
  width: 320rpx;
  height: 218rpx;
  border-radius: 8rpx;

  position: absolute;
  top: 0;
  left: 0;
}

.block.topics scroll-view .content {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;

  display: flex;
  flex-direction: column;
  justify-content: center;
  align-content: center;
}

.block.topics scroll-view view .title{  
  font-size: 28rpx;
  font-weight: normal;
  color: #ffffff;
  text-shadow: 0 4rpx 8rpx rgba(0, 0, 0, 0.5);
  text-align: center;
  overflow-wrap:break-word;
  white-space:normal;
  padding: 0 12rpx;
}

.block.topics scroll-view view .feeds{  
  font-size: 24rpx;
  font-weight: normal;
  color: #ffffff;
  text-align: center;
}