.block.latest {
  padding: 36rpx 36rpx 0rpx 36rpx;
  background: #fff;
  margin-top: 24rpx;
}

.block.latest .head .title {
  display: block;
  color: rgba(0, 0, 0, 0.9);
  font-size: 48rpx;
  font-weight: bold;
  line-height: 1;
}

.block.latest .head .sub-title {
  display: block;
  color: rgba(0, 0, 0, 0.6);
  font-size: 24rpx;
  margin-top: 16rpx;
  line-height: 1;
}

.block.latest .article {
  display: flex;
  padding: 48rpx 0;
  border-bottom: 1px solid rgba(0, 0, 0, 0.1);
}

.block.latest .article image {
  width: 312rpx;
  height: 200rpx;
  border-radius: 8rpx;
  display: block;
}

.block.latest .article .content {
  width: 366rpx;
  padding-left: 32rpx;
}

.block.latest .article .content .tag {
  border-radius: 4rpx;
  background-color: #0FBB58;
  font-size: 20rpx;
  color:rgba(255,255,255,0.85);
  padding: 4rpx 8rpx;
}

.block.latest .article .content .title {
  display: block;
  font-size: 30rpx;
  font-weight: bold;
  color: #333333;
  height: 84rpx;
  overflow: hidden;
  margin-top: 12rpx;
}

.block.latest .article .content .subtitle {
  display: block;
  font-size: 12px;
  color: rgba(0, 0, 0, 0.4);
  margin-top: 16rpx;

}