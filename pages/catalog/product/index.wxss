.container {
  flex-direction: column;
  height: 100%;
}

scroll-view {
  height: calc(100% - 100rpx);
  background: #f5f5f7;
}

.product-swiper,
.product-swiper swiper-item,
.product-swiper swiper-item image {
  width: 750rpx;
  height: 750rpx;
}

.nav-bottom {
  width: 100%;
  height: 100rpx;
  position: relative;
  
  border-top: 1rpx solid rgba(0, 0, 0, 0.1);
  background: #fff;
  display: flex;
  align-items: center;
  justify-content: flex-end;
}

.nav-bottom .cart {
  position: absolute;
  left: 36rpx;
  top: 36rpx;
}

.nav-bottom button {
  margin-left: 0px;
  margin-right: 20rpx !important;
  margin-top: 0;
  width: 280rpx;
}

.nav-bottom button:last-child {
  margin-right: 24rpx !important;
}

.content-block {
  padding: 18px;
  background: #fff;
  margin-bottom: 24rpx;
}

.content-block .h1 {
  display: block;
  font-size: 40rpx;
  color: #333333;
  font-weight: bold;
  margin: 0;
}

.content-block .subtitle {
  display: block;
  margin-top: 6px;
  font-size: 28rpx;
  color: rgba(0,0,0,0.5);
  font-weight: 300;
}

.content-block .line-sperator {
  height: 1px;
  background: rgba(0, 0, 0, 0.1);
  margin-top: 18px;
}

.price .current {
  font-size: 36rpx;
  font-weight: bold;
  color: #0FBB58;
}

.price .original {
  margin-left: 16rpx;
  font-size: 32rpx;
  color: rgba(0, 0, 0, 0.3);
  text-decoration: line-through;
}

.content-block .foot-info {
  margin-top: 18px;
  font-size: 24rpx;
  line-height: 24rpx;
  color: #9c9cae;
}

.content-block .tags {
  float: left;
}

.content-block .tags text {
  margin-left: 16rpx;
}

.content-block .sold {
  text-align: right;
}

.content-block .h3 {
  display: block;
  font-size: 32rpx;
  font-weight: bold;
  line-height: 1;
  letter-spacing: 0.1px;
  color: #000000;
}

.content-block .description {
  margin-top: 16rpx;
  display: block;
  font-size: 28rpx;
  line-height: 1.86;
  letter-spacing: -0.3px;
  text-align: justify;
  color: rgba(0, 0, 0, 0.6);
}

.content-block .seller {
  display: flex;
  padding-bottom: 28rpx;
  border-bottom: 1rpx solid rgba(0, 0, 0, 0.1);
}

.content-block .seller .avatar {
  width: 92rpx;
  height: 92rpx;
  border-radius: 50%;
}

.content-block .seller .info {
  flex:1;
  padding: 6rpx 0 0 36rpx;
  font-size: 28rpx;
  color: #000000;
}

.content-block .seller .info text {
  display: block;
}

.content-block .summary {
  display: flex;
  margin-top: 36rpx;
}

.content-block .summary view {
  flex: 1;
}

.content-block .summary view.sales {
  position: relative;
}

.content-block .summary view.sales view {
  position: absolute;
  top: 0;
  left: 36rpx;
}

.content-block .summary view.articles {
  position: relative;
}

.content-block .summary view.articles view {
  position: absolute;
  top: 0;
  right: 36rpx;
}

.content-block .summary view .num {
  font-size: 40rpx;
  font-weight: bold;
  color: #000000;
}
.content-block .summary view text {
  text-align: center;
  display: block;
  font-size: 28rpx;
}

.content-block.related-articles {
  padding-left: 0;
  padding-right: 0;
}

.content-block.related-articles .h3 {
  padding-left: 36rpx;
}

.content-block.related-articles scroll-view {
  width: 750rpx;
  height: 460rpx;
  margin-top: 48rpx;
  padding-left: 36rpx;
  background: #fff;
  white-space:nowrap;
}

.content-block.related-articles .article {
  width: 678rpx;
  height: 460rpx;
  margin-right: 16rpx;
  border-radius: 8rpx;
  position: relative;
  display: inline-block;
  overflow: hidden;
}

.content-block.related-articles .article image {
  width: 678rpx;
  height: 460rpx;
}

.content-block.related-articles .article .mask {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  top: 298rpx;
  padding: 12rpx 24rpx;
  border-radius: 0 0 8rpx 8rpx;
  background: linear-gradient(to bottom, rgba(0, 0, 0, 0), #000000);
}

.content-block.related-articles .article .mask .tag {
  background: #0FBB58;
  display: inline-block;
  font-size: 20rpx;
  font-weight: bold;
  border-radius: 4rpx;
  padding: 4rpx 10rpx;
  color: rgba(255,255,255,0.85);
}

.content-block.related-articles .article .mask .title {
  color: #fff;
  display: block;
  font-size: 32rpx;
  font-weight: 500;
  margin-top: 12rpx;
}

.content-block.related-articles .article .mask .subtitle {
  color: #fff;
  display: block;
  font-size: 20rpx;
  font-weight: 300;
  margin-top: 8rpx;
}

.content-block.related-products .products {
  width: 678rpx;
  height: 300rpx;
  margin-top: 48rpx;
  background: #fff;
  white-space: nowrap;
}

.content-block.related-products .product {
  width: 216rpx;
  margin-right: 16rpx;
  display: inline-block;
}

.content-block.related-products .product image {
  width: 216rpx;
  height: 216rpx;
}

.content-block.related-products .product .title {
  font-size: 24rpx;
  font-weight: 500;
  text-align: center;
  color: #333333;
}

.content-block.related-products .product .price {
  font-size: 24rpx;
  font-weight: 500;
  text-align: center;
  color: #0FBB58;
}

.dialog .head {
  padding: 28rpx;
  font-size: 32rpx;
  font-weight: bold;
  text-align: center;
  border-bottom: 1px solid rgba(0, 0, 0, 0.1);
}

.dialog.container {
  height: 480rpx;
  padding: 0 32rpx;
}

.dialog .body {
  padding: 24rpx 0;
  display: flex;
}

.dialog view.thumbnail {
  width: 200rpx;
  height: 200rpx;
}

.dialog image {
  width: 200rpx;
  height: 200rpx;
  display: block;
}

.dialog .content {
  padding-left: 24rpx;
  width: 478rpx;
}

.dialog .content .product-name {
  font-size: 28rpx;
  font-weight: bold;
}

.dialog .content .price .current {
  font-size: 24rpx;
}

.dialog .content .price .stock {
  margin-left: 16rpx;
  font-size: 24rpx;
  color: rgba(0, 0, 0, 0.6);
}

.dialog .content .quantity {
  margin-top: 12rpx;
  margin-right: 24rpx;
  font-size: 28rpx;
  display: flex;
  align-items: center;
}

.dialog .content .quantity view:first-child {
  flex: 1;
}

.dialog .foot {
  border-top: 1px solid rgba(0, 0, 0, 0.1);
  padding: 24rpx 0rpx;
}