/**index.wxss**/
@import "../../../app.wxss";

.container {
  flex-direction: column;
} 

.search-bar {
  width: 750rpx;
  height: 100rpx;
  box-shadow: 0 1px 0 0 #d3d3d3;
  display: flex;
  align-items: center;
  padding: 0 32rpx;
  background: #ffffff;
}

.search-bar input {
  height: 29px;
  width: 564rpx;
  border-radius: 6rpx;
  background-color: #ffffff;
  border: 1px solid rgba(0,0,0,0.2);
  font-size: 14px;
  padding: 0 16rpx;
}

.search-bar .btn {
  flex: 1;
  font-size: 14px;
  display: inline-block;
  text-align: center;
}

.keywords {
  margin-top: 32rpx;
  display: flex;
  flex-wrap:wrap;
}

.keywords .keyword {
  width: 33.333333%;
  padding: 12px 0;
  background: #ffffff;
  text-align: center;
  font-size: 14px;
  color: #333333;
  border-right: 3px solid #f5f5f5;
  border-bottom: 3px solid #f5f5f5;
}

.history {
  margin-top: 48px;
}

.history .head {
  padding: 0 16px;
  font-size: 12px;
  color: #333333;
}

.history .fa {
  font-size: 16px;
}

.history .categories {
  margin-top: 14px;
}

.history .categories .cell {
  width: 750rpx;
  height: 88rpx;
  line-height: 88rpx;
  font-size: 14px;
  color: #333333;
  background: #fff;
  border-bottom: 3px solid #f5f5f5;
  padding: 0 16px;
}