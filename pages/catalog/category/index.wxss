/**index.wxss**/
@import "../../../app.wxss";

.container {
  background-color: #fff;
} 

.cat-list {
  width: 180rpx;
  border-right: 1px solid rgba(0, 0, 0, 0.1);
}

.cat-list .cat {
  width: 180rpx;
  height: 100rpx;
  line-height: 100rpx;
  font-size: 14px;
  text-align: center;
  border-bottom: 1px solid rgba(0, 0, 0, 0.1);
}

.cat-list .cat.selected {
  color: #fff;
  background: #0FBB58;
  border-bottom: 1px solid cd9f7a;
  border-right: 1px solid cd9f7a;
  position: relative;
}

.cat-list .cat.selected::after {
  content: "";
  display: block;
  position: absolute;
  right: -2px;
  top: 50%;
  margin-top: -8px;

  font-size: 0;  
  line-height: 0;  
  border-width: 8px;  
  border-color: #fff;  
  border-left-width: 0;  
  border-style: dashed;  
  border-right-style: solid;  
  border-top-color: transparent;  
  border-bottom-color: transparent;  
}

.subcat-list {
  padding: 0 24rpx;
}

.subcat-list image.banner  {
  width: 100%;
}

.subcats {
  display: flex;
  flex-wrap:wrap;
}

.subcats .cat {
  width: 33.333333%;
  text-align: center;
  padding: 16px 0;
  font-size: 12px;
}

.subcats .cat .fa {
  display: block;
  font-size: 48px;
}