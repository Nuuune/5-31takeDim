/**
 * Block Banners
 */
.block.auctions {
  padding: 0;
}

.block.auctions .head {
  padding: 0;
  margin: 36rpx 36rpx 0 36rpx;
}

/**
 * Banner Body
 */
.block.auctions .body {
  width: 100%;
  height: 444rpx;
}

/**
 *Banner Body Swiper Size
 */
.block.auctions .body swiper {
  width: 100%;
  height: 100%;
}

.block.auctions .body swiper-item {
  display: flex;
  align-items: center;
  justify-content: center;
}

.block.auctions .body .auction {
  width: 686rpx;
  height: 348rpx;
  position: relative;
  padding: 12px;
  box-sizing: border-box;
  box-shadow: 0 8rpx 32rpx 0 rgba(0, 0, 74, 0.2);

  display: flex;
}

.block.auctions .body .auction image {
  border-radius: 8rpx;
  width: 300rpx;
  height: 300rpx;
}

.block.auctions .body .auction .content {
  flex: 1;
}

.block.auctions .body .auction .title {
    font-size: 16px;
    font-weight: 600;
    color: rgba(0,0,0,0.8);
    display: block;
}

.block.auctions .body .auction .label-time-left {
  margin-top: 32rpx;
  font-size: 12px;
  color: rgba(0,0,0,0.6);
  display: block;
}

.block.auctions .body .auction .time-left-box {
  display: flex;
  font-size: 20px;
  color: rgba(0, 0, 0, 0.6);
  margin-top: 24rpx;
}

.block.auctions .body .auction .time-left-box .box:first-child {
  margin-left: 0;
}

.block.auctions .body .auction .time-left-box .box {
  border: 1px solid rgba(0, 0, 0, 0.6);
  width: 60rpx;
  height: 60rpx;
  font-size: 20px;
  font-weight: 500;
  color: rgba(0, 0, 0, 0.8);
  text-align: center;
  margin: 0 12rpx;
}

.block.auctions .body .auction .price{
  margin-top: 50rpx;
}

.block.auctions .body .auction .price .current{
  font-size: 20px;
  font-weight: bold;
  color: #0FBB58;
}

.block.auctions .body .auction .price .original{
  font-size: 14px;
  font-weight: 300;
  color: rgba(0,0,0,0.4);
  text-decoration: line-through;
  margin-left: 10rpx;
}