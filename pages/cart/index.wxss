/**index.wxss**/
@import "../../app.wxss";

.container {
  flex-direction: column;
  height: 100%;
}

scroll-view {
  height: calc(100% - 120rpx);
  background: #f5f5f7;
}

 .nav-bottom {
  border-top: 1px solid rgba(0,0,0,0.1);
  box-sizing: border-box;
  height: 120rpx;
  padding: 0 36rpx;

  font-size: 14px;
  display: flex;
  align-items: center;
  background: #fff;
}

.nav-bottom .total {
  font-size: 20px;
  font-weight: bold;
  color: #0FBB58;
}

.nav-bottom .button {
  margin-right: 0;
}

.block.cart-item {
  background: #fff;
  margin-top: 24rpx;
  padding: 0 36rpx;
  box-shadow: 0 0 3px 0 rgba(0, 0, 73, 0.03);
}

.block.cart-item .seller {
  padding: 24rpx 0;
  border-bottom: 1rpx solid rgba(0,0,0,0.1);
  font-size: 12px;
  color: #111111;
  font-weight: bold;

  display: flex;
  align-items: center;
}

.block.cart-item .fa {
  font-size: 22px;
  color: #bbbbbb;
  font-weight: lighter;
  display: inline-block;
  margin-right: 36rpx;
}

.block.cart-item .seller image {
  width: 56rpx;
  height: 56rpx;
  border-radius: 100%;
  margin-right: 16rpx;
}

.block.cart-item .product {
  padding: 25rpx 0;
  display: flex;
  align-items: center;
  border-bottom: 1rpx solid rgba(0,0,0,0.05);
}
.block.cart-item .product image {
  width: 200rpx;
  height: 200rpx;
}

.block.cart-item .product .content {
  flex: 1;
  height: 200rpx;
  padding-left: 24rpx;
  position: relative;
}

.block.cart-item .product .product-name {
  font-size: 13px;
  color: #333333;
  display: block;
}

.block.cart-item .product .price {
  position: absolute;
  bottom: 0rpx;
  left: 36rpx;
}

.block.cart-item .product .price .original {
  display: block;
  font-size: 12px;
  color: #999999;
  text-decoration: line-through;
}

.block.cart-item .product .price .current {
  font-size: 18px;
  color: #000;
  font-weight: bold;
  display: inline-block;
  margin-top: 16rpx;
}

.block.cart-item .product .quantity {
  display: flex;
  flex-direction: row;
  position: absolute;
  bottom: 0;
  right: 0;
  width: 210rpx;
}

.block.cart-item .product .quantity button {
  margin-bottom: 0;
}