/**index.wxss**/
@import "../../app.wxss";

.container {
  flex-direction: column;
  height: 100%;
}

scroll-view {
  height: calc(100% - 120rpx);
}

.nav-bottom {
  border-top: 1px solid rgba(0,0,0,0.1);
  box-sizing: border-box;
  height: 120rpx;
  padding: 0 36rpx;

  font-size: 28rpx;
  display: flex;
  align-items: center;
  background: #fff;
}

.nav-bottom .total {
  font-size: 40rpx;
  font-weight: bold;
  color: #0FBB58;
}

.nav-bottom .button {
  margin-right: 0;
}

.block.shipping-info {
  background: #5e7996;
  color: #fff;
  font-size: 28rpx;
  padding: 36rpx;
  display: flex;
  position: relative;
}

.block.shipping-info .location {
  position: absolute;
  top: 50%;
  margin-top: -18rpx;
  left: 36rpx;
  font-size: 36rpx;
}

.block.shipping-info .angle-right {
  position: absolute;
  top: 50%;
  margin-top: -18rpx;
  right: 36rpx;
  font-size: 36rpx;
}

.block.shipping-info .wrapper {
  padding: 0 74rpx;
}

.block.shipping-info .mobile {
  margin-left: 100rpx;
}

.block.shipping-info .address {
  margin-top: 18rpx;
}

.block.cart-item {
  background: #fff;
  margin-top: 24rpx;
  padding: 0 36rpx;
  box-shadow: 0 0 6rpx 0 rgba(0, 0, 73, 0.03);
}

.block.cart-item .seller {
  padding: 24rpx 0;
  border-bottom: 1rpx solid rgba(0,0,0,0.1);
  font-size: 24rpx;
  color: #111111;
  font-weight: bold;

  display: flex;
  align-items: center;
}

.block.cart-item .seller image {
  width: 56rpx;
  height: 56rpx;
  border-radius: 100%;
  margin-right: 16rpx;
}

.block.cart-item .product {
  padding: 25rpx 0;
  display: flex;
  align-items: center;
  border-bottom: 1rpx solid rgba(0,0,0,0.05);
}
.block.cart-item .product image {
  width: 200rpx;
  height: 200rpx;
}

.block.cart-item .product .content {
  flex: 1;
  height: 200rpx;
  padding-left: 24rpx;
  position: relative;
}

.block.cart-item .product .product-name {
  font-size: 28rpx;
  color: #333333;
  display: block;
}

.block.cart-item .product .product-en-name {
  font-size: 22rpx;
  color: rgba(0,0,0,0.6);
  margin-top: 0rpx;
  display: block;
}

.block.cart-item .product .price {
  position: absolute;
  bottom: 0rpx;
  left: 36rpx;
}

.block.cart-item .product .price .current {
  font-size: 28rpx;
  color: #000;
  font-weight: bold;
  display: inline-block;
  margin-right: 8rpx;
}

.block.cart-item .product .price .original {
  font-size: 24rpx;
  color: rgba(0, 0, 0, 0.3);
  text-decoration: line-through;
  display: inline-block;
}

.block.cart-item .product .quantity {
  position: absolute;
  bottom: 0;
  right: 0;
  font-size: 26rpx;
  color: #333333;
}