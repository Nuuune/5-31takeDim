/**index.wxss**/
@import "../../../app.wxss";

.container {
  flex-direction: column;
  background: #f5f5f7;
}

.customer-info {
  display: flex;
  flex-direction: column;
  align-items: center;

  padding: 32rpx 0 0 0;
  background: #fff;
}

.customer-info .avatar {
  width: 120rpx;
  height: 120rpx;
  border: 1px solid #000;
  border-radius: 50%;
}

.customer-info .nickname {
  margin-top: 32rpx;
  font-size: 40rpx;
  font-weight: bold;
  display: flex;
  align-items: center;
  justify-content: center;
}

.customer-info .nickname .tag {
  display: inline-block;
  border-radius: 4rpx;
  background-color: #feca06;
  padding: 4rpx 8rpx;
  font-size: 20rpx;
  color: #fff;
  margin-left: 24rpx;
}

.customer-info .btn-group {
  margin-top: 48rpx;
  display: flex;
}

.customer-info .btn-group .home {
  border-radius: 8rpx;
  border: solid 1px rgba(0, 0, 0, 0.8);
  width: 240rpx;
  height: 70rpx;
  line-height: 70rpx;
  font-size: 28rpx;
  font-weight: bold;
  text-align: center;
  display: block;
  margin-right: 32rpx;
}

.customer-info .btn-group .messages {
  display: block;
  border-radius: 8rpx;
  border: solid 1px rgba(0, 0, 0, 0.8);
  width: 108rpx;
  height: 70rpx;
  line-height: 70rpx;
  font-size: 32rpx;
  font-weight: bold;
  text-align: center;
}

.nav-orders {
  padding: 44rpx 32rpx 32rpx 32rpx;
  background: #fff;
}

.nav-orders .wrapper {
  border-radius:16rpx;
  background-color: #ffffff;
  box-shadow: 0 8rpx 16rpx 0 rgba(0, 0, 0, 0.1);
  display: flex;
}

.nav-orders .item {
  flex: 1;
  font-size: 24rpx;
  color: #000000;
  display: flex;
  flex-direction: column;
  text-align: center;
  align-items: center;
  justify-content: center;
  padding: 32rpx 0;
}

.nav-orders .item .fa {
  display: block;
  font-size: 48rpx;
  color: rgba(0,0,0,0.8);
  margin-bottom: 16rpx;
}

.nav-category {
  padding: 0 32rpx;
  background: #fff;
}

.nav-category.tm {
  margin-top: 32rpx;
}

.nav-category .cell {
  font-size: 28rpx;
  font-weight: bold;
  height: 96rpx;
  line-height: 96rpx;
  color: rgba(0, 0, 0, 0.8);
  border-bottom: 1px solid rgba(216, 216, 216, 0.4);
}

.nav-category .cell:last-child {
  border-bottom: none;
}

.nav-category > view {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.nav-category > view .ico {
  color: #d8d8d8;
  font-size: 42rpx;
}